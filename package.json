{
  "name": "react-use-value",
  "version": "0.0.0",
  "private": false,
  "homepage": "https://ogbizi.com/react-global-local-state",
  "dependencies": {
    "lodash.isequal": "^4",
    "moment": "^2",
    "react": "^18",
    "react-dom": "^18"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint . --fix",
    "commit": "git-cz",
    "compile": "tsc --project tsconfig.prod.json",
    "recompile": "rm -rf ./dist && npm run compile",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "typecheck": "npm run compile --noEmit",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.5.12",
    "@types/lodash.isequal": "^4.5.8",
    "@types/moment": "^2.13.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "commitlint": "^19.3.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "lodash.isequal": "^4.5.0",
    "moment": "^2.30.1",
    "prettier": "^3.3.2",
    "prettier-eslint": "^16.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "semantic-release": "^24.0.0",
    "typescript": "^5.4.5"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./useValue": "./dist/useValue.js",
    "./Header": "./src/Header/index.js"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.(j|t)s{,x}": [
      "npm run lint"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/hooks/**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "release": {
    "dryRun": false,
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
